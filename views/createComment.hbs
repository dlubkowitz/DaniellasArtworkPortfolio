<h2>POST A COMMENT</h2>

{{#if errorMessages.length}}
  <p>Couldn't post the comment because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
{{#if isLoggedInErrorMessage.length}}
  <p>Authorization error:</p>
  <ul>
    {{#each isLoggedInErrorMessage}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
{{#unless isLoggedIn}}
  <form action="" method="POST">
    <div>
      Name:
      <input type="text" name="name" value="{{name}}" />
    </div>
    <div>
      Comment:
      <input type="text" name="comment" value="{{comment}}" />
    </div>
    <input type="submit" value="Post Comment" />
  </form>
{{/unless}}