<h2>CREATE ARTWORK POST</h2>

{{#if errorMessages.length}}
  <p>Couldn't create the artwork because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
{{#if isLoggedInErrorMessage.length}}
  <p>Authorization error:</p>
  <ul>
    {{#each isLoggedInErrorMessage}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<form action="" method="POST">
  <div>
    Title
    <input type="text" name="title" value="{{title}}" />
  </div>
  <div>
    Description
    <input type="text" name="description" value="{{description}}" />
  </div>
  <div>
    Artwork URL
    <input type="text" name="imageURL" value="{{imageURL}}" />
  </div>
  <input type="submit" value="Upload Artwork" />
</form>