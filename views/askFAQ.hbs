<h2>ASK A QUESTION</h2>

{{#if errorMessages.length}}
  <p>Couldn't post the question because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
{{#if isLoggedInErrorMessage.length}}
  <p>Authorization error:</p>
  <ul>
    {{#each isLoggedInErrorMessage}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

{{#unless isLoggedIn}}
  <form action="" method="POST">
    <div>
      Question:
      <input type="text" name="question" value="{{question}}" />
    </div>
    <input type="submit" value="Post Question" />
  </form>
{{/unless}}