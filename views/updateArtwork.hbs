<h2>UPDATE ARTWORK</h2>

{{#if errorMessages.length}}
  <p>Couldn't update the artwork because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}
{{#if isLoggedInErrorMessage.length}}
  <p>Authorization error:</p>
  <ul>
    {{#each isLoggedInErrorMessage}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<form method="POST">
  <div>
    Title
    <input type="text" name="title" value="{{artwork.title}}" />
  </div>
  <div>
    Description
    <input type="text" name="description" value="{{artwork.description}}" />
  </div>
  <div>
    Artwork URL
    <input type="text" name="imageURL" value="{{artwork.imageURL}}" />
  </div>
  <input type="submit" value="Update Artwork" />
</form>